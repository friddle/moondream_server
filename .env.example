# API Key for Standard Moondream API Endpoints (/v1/caption, /v1/query)
# Required for accessing the v1 API endpoints
# Leave empty to disable authentication (not recommended for production)
VLM_API_KEY=your_secret_api_key_here

# HuggingFace Token
# Required for downloading the Moondream-2B model
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# HTTP Basic Authentication (for legacy endpoints)
# Used for /identify, /caption, and / endpoints
# Leave VLM_AUTH_USERNAME empty to disable basic auth
VLM_AUTH_USERNAME=admin
VLM_AUTH_PASSWORD=admin
